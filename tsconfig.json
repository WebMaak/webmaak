{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",  // Add this line
    "paths": {
      "@/*": ["*"]  // Add this line
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/components/SecondSection/ItScroll.jsx", "src/app/utlis/cn.ts", "src/components/ContainerTextFlip/ContainerTextFlip.jsx", "src/components/Globe/Globe.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
